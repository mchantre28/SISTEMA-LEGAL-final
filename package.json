{
  "name": "novo-projeto-local",
  "version": "2.0.0",
  "description": "Sistema de Gestão Empresarial Completo",
  "main": "backend/app.js",
  "scripts": {
    "start": "node backend/app.js",
    "dev": "nodemon backend/app.js",
    "test": "jest",
    "setup-db": "mysql -u root -p < database/schema.sql && mysql -u root -p < database/seed.sql",
    "reset-db": "mysql -u root -p -e 'DROP DATABASE IF EXISTS novo_projeto_local; CREATE DATABASE novo_projeto_local;' && npm run setup-db"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql",
    "api",
    "crud",
    "database",
    "gestao",
    "empresarial",
    "juridico"
  ],
  "author": "Sistema de Gestão",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}